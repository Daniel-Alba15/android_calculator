<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/dark"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/contrast_fill"
        android:onClick="onClick" />

    <Button
        android:id="@+id/light"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/brilllo_claro"
        android:onClick="onClick"
        android:visibility="invisible" />

    <TableLayout
        android:id="@+id/oscuro"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/modulo"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/borrar"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/erase"
                android:layout_width="54dp"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight=".6"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/eliminar"
                tools:ignore="DuplicateIds" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/siete"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ocho"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nueve"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/multiplication"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight=".6"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/multipicacion"
                tools:ignore="DuplicateIds" />

        </TableRow>

        <TableRow
            android:layout_width="54dp"
            android:layout_height="55sp"
            android:minWidth="10dp">

            <ImageButton
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cuatro"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cinco"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/seis"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/subtraction"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="0.6"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/resta"
                tools:ignore="DuplicateIds" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/uno"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dos"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tres"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.6"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/suma"
                tools:ignore="DuplicateIds" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cero"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/punto"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.4"
                android:background="@color/negro"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/igual"
                tools:ignore="DuplicateIds" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:gravity="bottom"
        android:text="@string/pantalla"
        android:textColor="@color/negro"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/preview" />

    <TextView
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="134dp"
        android:onClick="onClick"
        android:textColor="@color/negro"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pantalla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>